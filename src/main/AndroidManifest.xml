<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.estimote.examples.demos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <!-- Needed permissions in order to scan for beacons. -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- Declaration that this app is usable on phones with Bluetooth Low Energy. -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name="ch.hslu.herger.config.Configuration"
        android:label="Estimote Demos"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".AllDemosActivity"
            android:label="Estimote Demos"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BeaconScannerActivity"
            android:label="Select Beacon"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DistanceBeaconActivity"
            android:label="Distance Demo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NotifyDemoActivity"
            android:label="Notify Demo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CharacteristicsDemoActivity"
            android:label="Characteristics Demo"
            android:screenOrientation="portrait" />

        <!-- Estimote service responsible for scanning beacons. -->
        <service
            android:name="com.estimote.sdk.service.BeaconService"
            android:exported="false" />

        <activity
            android:name=".InsActivity"
            android:label="@string/title_activity_ins" >
        </activity>
        <activity
            android:name="ch.hslu.herger.sensor.LinearAccelerationActivity"
            android:label="@string/title_activity_linear_acceleration" >

            <!-- android:theme="@android:style/Theme.NoDisplay"> -->
        </activity>
        <activity
            android:name="ch.hslu.herger.sensor.SensorFusionActivity"
            android:label="@string/title_activity_sensor_fusion" >
        </activity>
        <activity
            android:name="ch.hslu.herger.sensor.StepDetector"
            android:label="@string/title_activity_step_detector" >
        </activity>
    </application>

</manifest>
